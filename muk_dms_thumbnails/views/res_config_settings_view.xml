<odoo>

<record id="res_config_settings_view_form" model="ir.ui.view">
	<field name="name">res.config.settings.view.form</field>
	<field name="model">res.config.settings</field>
	<field name="priority" eval="20"/>
	<field name="inherit_id" ref="muk_dms.res_config_settings_view_form"/>
	<field name="arch" type="xml">
		 <div name="file" position="inside">
    		<div class="col-xs-12 col-md-6 o_setting_box">
	            <div class="o_setting_right_pane">
	                <label string="Thumbnail Creation"/>
	                <div class="text-muted">
	                    Defines a list of file extensions for which no thumbnails are to be created.
	                </div>
	                <div class="content-group">
	                 <div class="row mt16">
	                     <label class="col-md-3 o_light_label" for="no_thumbnail_extensions"/>
	                     <field name="no_thumbnail_extensions" placeholder=".mov, .avi"/>
	                 </div>
	             </div>
	            </div>
	        </div>
		</div>
    </field>
</record>
            
</odoo>


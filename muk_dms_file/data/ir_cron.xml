<odoo noupdate="1">

<record id="cron_dms_file_synchronize" model="ir.cron">
	<field name="name">Cron job to Synchronize the File Store</field>
	<field name="active" eval="True" />
	<field name="user_id" ref="base.user_root" />
	<field name="model_id" ref="muk_dms.model_muk_dms_settings" />
	<field name="interval_number">1</field>
	<field name="interval_type">days</field>
	<field name="numbercall">-1</field>
	<field name="priority" eval="5" />
	<field name="state">code</field>
	<field name="code">model._synchronize_filestore()</field>
</record>

<record id="cron_dms_data_system_checksum" model="ir.cron">
	<field name="name">Cron job to update the Checksums of File Store</field>
	<field name="active" eval="False" />
	<field name="user_id" ref="base.user_root" />
	<field name="model_id" ref="muk_dms_file.model_muk_dms_data_system" />
	<field name="interval_number">1</field>
	<field name="interval_type">days</field>
	<field name="numbercall">-1</field>
	<field name="priority" eval="5" />
	<field name="state">code</field>
	<field name="code">model.search([]).update_checksum()</field>
</record>

</odoo>
